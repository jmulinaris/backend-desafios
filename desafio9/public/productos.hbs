{{#if products.length}}
    <table class="table">
        <tr class="titulos-tabla">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each products}}
        <tr class="datos-tabla">
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img class="imagen-tabla" src={{this.thumbnail}} alt="imagen"></td>
        </tr>
        {{/each}}
    </table>
{{else}}
    <h3 style="color:red" class="text-center">No se encontraron productos</h3>
{{/if}}